{
    "manifest_version": 3,
    "name": "Turbo BYOP",
    "version": "0.4.0",
    "description": "Turbocharge Field Team 6's BYOP!",
    "author": "BEI.RE Corp",
    "homepage_url": "https://www.bei.re",
    "permissions": [
        "storage",
        "activeTab"
    ],
    "host_permissions": [
        "https://www.openvpb.com/VirtualPhoneBank*"
    ],
    "optional_host_permissions": [
        "<all_urls>"
    ],
    "icons": {
        "48": "icons/phone-outgoing-blue-48.png",
        "96": "icons/phone-outgoing-blue-96.png",
        "128": "icons/phone-outgoing-blue-128.png"
    },
    "background": {
        "service_worker": "service-worker.js"
    },
    "action": {
        "default_icon": {
            "16": "icons/phone-outgoing-blue-16.png",
            "32": "icons/phone-outgoing-blue-32.png"
        },
        "default_title": "Turbo BYOP",
        "default_popup": "popup.html"
    },
    "options_ui": {
        "page": "options.html",
        "browser_style": true
    },
    "content_scripts": [
        {
            "matches": ["https://voice.google.com/*"],
            "js": [
                "contentScripts/googleVoiceManager.js",
                "contentScripts/tools.js",
                "contentScripts/main.js"
            ],
            "all_frames": true
        },
        {
            "matches": ["https://www.openvpb.com/*"],
            "js": [
                "dependencies/browser-polyfill.js",
                "dependencies/tingle.js",
                "dependencies/tingle.css",
                "vpb-common.js",
                "openvpb.js"
            ],
            "all_frames": true
        }
    ]
}
